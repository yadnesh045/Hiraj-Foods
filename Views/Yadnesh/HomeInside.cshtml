@if (TempData["Info"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <style>
        /* Custom styling for info toastr notifications */
        .toastr-custom-info {
            background-color: #AEDDE0 !important; /* Bootstrap pestel info color; adjust as needed     #ABDBE3   #5BBCFF*/
        }
    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            // Set Toastr options
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut",
                "toastClass": "toast toastr-custom-info" // Apply custom class for styling
            };

            // Display the Toastr notification
            toastr.info('@Html.Raw(TempData["Info"])'); // Ensure correct encoding
        });
    </script>
}

