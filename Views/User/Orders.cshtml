@model List<Hiraj_Foods.Models.Orders>

<!--search area-->
<div class="search-input">
    <div class="search-close">
        <i class="fas fa-times"></i>
    </div>
    <form>
        <input type="text" name="text" placeholder="Search Heare">
        <button class="search-btn" type="submit">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<!-- search area -->


<div class="preloader">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>

<h1 style="display:flex;justify-content:center;margin:20px;font-family:Arial">ORDERS</h1>

@if (Model.Count != 0)
{
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <!-- Center the content -->
                    @foreach (var item in Model)
                    {
                        <div class="card mb-4 shadow">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <img src="@item.ProductImageUrl" style="height:200px;width:200px" alt="Image Description" class="img-fluid">
                                            </div>
                                            <div class="col-md-9">
                                                <p class="card-text">@item.Products</p>
                                                <p class="card-text">@item.date.ToString("dd-MM-yyyy")</p>
                                                <p class="card-text">Price: Rs.@item.Total</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <div class="d-flex justify-content-end">
                                            @if (item.status != "Delerived")
                                            {
                                                <button type="button" class="btn btn-info">
                                                    <a href="@Url.Action("TrackOrder", "Anurag", new { orderId = item.Id })" style="color: inherit; text-decoration: none;">Track Order</a>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-warning">
                                                    <a href="@Url.Action("GenerateInvoicePDF", "Anurag", new { orderId = item.Id })" style="color: inherit; text-decoration: none;">Download Invoice</a>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>




}
else
{
    <div style="text-align: center; margin: 50px 50px; padding: 200px; background-color: white; color: #ffb11f; border: 3px solid #ffb11f; border-radius: 5px;">
        <h3>You Dont Have Any Orders Yet</h3>
        <a class="btn btn-outline-warning" asp-action="Home" asp-controller="Yadnesh">Continue Shopping</a>
    </div>
}