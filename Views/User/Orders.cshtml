@model List<Hiraj_Foods.Models.Orders>

<!--search area-->
<div class="search-input">
    <div class="search-close">
        <i class="fas fa-times"></i>
    </div>
    <form>
        <input type="text" name="text" placeholder="Search Heare">
        <button class="search-btn" type="submit">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<!-- search area -->


<div class="preloader">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>

<h1 style="display:flex;justify-content:center;margin:20px;font-family:'Comic Sans MS'">ORDERS</h1>

@if (Model.Count != 0)
{
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <!-- Center the content -->
                    @foreach (var item in Model)
                    {
                        <div class="card mb-4 shadow">
                            <div class="card-body">
                                <p class="card-text">@item.Products</p>
                                <p class="card-text">@item.date.ToString("dd-MM-yyyy")</p>
                                <p class="card-text">Price: Rs.@item.Total</p>
                                <div class="input-group mb-3">
                                    <!-- Add any input fields or buttons here if needed -->
                                </div>
                            </div>
                            <a href="@Url.Action("GenerateInvoicePDF", "Anurag", new { orderId = item.Id })">Download Invoice</a>
                            <!-- Assuming item.Id represents the order ID -->
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>


}
else
{
    <div style="text-align: center; margin: 50px 50px; padding: 200px; background-color: white; color: #ffb11f; border: 3px solid #ffb11f; border-radius: 5px;">
        <h3>You Dont Have Any Orders Yet</h3>
        <a class="btn btn-outline-warning" asp-action="Home" asp-controller="Yadnesh">Continue Shopping</a>
    </div>
}