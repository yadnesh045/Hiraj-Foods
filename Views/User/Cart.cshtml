@model List<Hiraj_Foods.Models.Cart>

@if (Model.Count != 0)
{
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 shadow">
                            <img src="@item.ProductImageUrl" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">@item.ProductName</h5>
                                <p class="card-text">@item.ProductDescription</p>
                                <p class="card-text">Price: $@item.ProductPrice</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="quantity-label">Quantity</span>
                                    </div>
                                    <input type="number" class="form-control quantity-input" value="1" data-price="@item.ProductPrice" aria-label="Quantity" aria-describedby="quantity-label" min="1">
                                </div>
                                <a asp-action="DeleteFromCart" asp-controller="User" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <div class="float-right">
                        <h4>Total: <span id="totalAmount">00</span></h4>
                    </div>
                </div>
            </div>
            <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-right">
                    <a id="checkoutButton" class="btn btn-warning mb-4 btn-lg pl-5 pr-5">Checkout</a>
                </div>
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                    <a href="catalog.html">
                        <i class="fas fa-arrow-left mr-2"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div style="text-align: center; margin: 50px 50px; padding: 200px; background-color: white; color: #ffb11f; border: 3px solid #ffb11f; border-radius: 5px;">
        <h3>Cart Is Empty</h3>
        <a class="btn btn-outline-warning" asp-action="Home" asp-controller="Yadnesh">Continue Shopping</a>
    </div>
}

@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["Error"]');
    </script>
}

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["Success"]');
    </script>
}

<style>
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .quantity-input {
        max-width: 80px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Add event listener to the checkout button
        $("#checkoutButton").click(function () {
            // Get total price
            var totalPrice = parseFloat($("#totalAmount").text().replace('$', ''));

            // Get product names and quantities
            var productDetails = [];
            $(".card-title").each(function () {
                var productName = $(this).text();
                var quantity = $(this).siblings('.input-group').find('.quantity-input').val();
                productDetails.push({ productName: productName, quantity: quantity });
            });

            // Use AJAX to send the total price and product details to the server
            $.ajax({
                type: "POST", // Use POST method
                url: "/Yadnesh/SaveTotal", // URL of your controller method
                data: { total: totalPrice, products: productDetails }, // Data to send
                success: function (response) {
                    // Handle success response
                    console.log(response); // For example, log the response to console
                    // Redirect to Checkout page
                    window.location.href = "/Yadnesh/Checkout";
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.error(error); // Log the error to console
                }
            });
        });

        // Add event listeners for quantity inputs
        $('.quantity-input').on('input', function () {
            updateTotalPrice();
        }).on('change', function () {
            validateQuantity($(this));
        });

        // Function to update total price
        function updateTotalPrice() {
            var totalPrice = 0;
            $('.quantity-input').each(function () {
                var price = parseFloat($(this).data('price'));
                var quantity = parseInt($(this).val());
                totalPrice += price * quantity;
            });
            $('#totalAmount').text('$' + totalPrice.toFixed(2));
        }

        // Function to validate quantity
        function validateQuantity(input) {
            var quantity = parseInt(input.val());
            if (quantity < 1) {
                input.val(1); // Reset quantity to 1 if less than 1
            }
            updateTotalPrice(); // Update total price after validating quantity
        }
    });
</script>

