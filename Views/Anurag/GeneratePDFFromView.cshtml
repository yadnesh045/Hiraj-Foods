@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <style>
        /* Company logo */
        .company-logo {
            max-width: 200px;
        }
        /* Invoice container */
        .invoice-container {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }
        /* Invoice header */
        .invoice-header {
            background-color: #ffb11f;
            color: #fff;
            padding: 10px;
            border-radius: 10px 10px 0 0;
        }
        /* Invoice details */
        .invoice-details {
            margin-top: 20px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 0 0 10px 10px;
        }
        /* Table styling */
        .invoice-table {
            margin-top: 20px;
        }
        /* Footer */
        .invoice-footer {
            margin-top: 20px;
            background-color: #ffb11f;
            color: #fff;
            padding: 10px;
            border-radius: 0 0 10px 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Company logo -->
        <div class="text-center mb-4">
            <img src="~/img/hiraj.png" alt="Company Logo" class="company-logo">
        </div>

        <!-- Invoice container -->
        <div class="invoice-container">
            <!-- Invoice header -->
            <div class="invoice-header text-center">
                <h2>Invoice</h2>
            </div>

            <!-- Invoice details -->
            <div class="invoice-details">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
                        <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
                        <p><strong>Customer Name:</strong> @Model.CustomerName</p>
                        <p><strong>Payment Mode:</strong> @Model.PaymentMode</p>
                    </div>
                </div>
            </div>

            <!-- Invoice items table -->
            <div class="invoice-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <!-- Add more table headers as needed -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ItemName</td>
                                <td>@item.Quantity</td>
                                <!-- Add more table cells as needed -->
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Total amount -->
            <div class="text-right">
                <h4>Total Amount: @Model.TotalAmount.ToString("C")</h4>
            </div>
        </div>

        <!-- Footer -->
        <div class="invoice-footer text-center">
            <p>Thank you for your business. For any inquiries, contact us at support@hirajfoods.com</p>
        </div>
    </div>
</body>
</html>
