@model Hiraj_Foods.Models.Orders

@{
    ViewData["Title"] = "Track Order";
}

<style>
    /* Container styles */
    .container {
        padding: 20px;
    }

    /* Card styles */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Card header styles */
    .card-header {
        background-color: #ffb11f;
        border-radius: 10px 10px 0 0;
        padding: 15px 20px;
    }

        /* Card header text styles */
        .card-header h3 {
            margin: 0;
            font-size: 24px;
        }

    /* Card body styles */
    .card-body {
        padding: 20px;
    }

    /* Order information styles */
    .order-info p {
        margin-bottom: 10px;
        font-size: 16px;
    }

    /* Progress bar container styles */
    .progress-container {
        position: relative;
    }

    /* Progress label styles */
    .progress-label {
        position: absolute;
        top: -30px;
        font-size: 14px;
        font-weight: bold;
    }

    /* Progress bar styles */
    .progress {
        height: 30px;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5">
                <div class="card-header  text-white">
                    <h3 class="mb-0">Track Order</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4 order-info">
                        <h5>Order Information</h5>
                        <p><strong>Order ID:</strong> @Model.Id</p>
                        <p><strong>Status:</strong> @Model.Paymentmethod</p>
                        <!-- Add any other order information you want to display -->
                    </div>

                    <br />
                    <!-- Progress bar container -->
                    <div class="progress-container">
                        <!-- Progress labels -->
                        <div class="progress-label">Order Received</div>
                        <div class="progress-label" style="left: 25%;">Dispatched</div>
                        <div class="progress-label" style="left: 50%;">Shipped</div>
                        <div class="progress-label" style="right: 0;">Delivered</div>
                        <!-- Progress bar -->
                        <div class="progress">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <!-- Script for progress bar functionality -->
                    <script>
                        $(document).ready(function () {
                            // Initial progress value
                            var progress = 0;
                            var orderStatus = '@ViewBag.OrderStatus';

                            // Function to update progress
                            function updateProgress(value) {
                                $('.progress-bar').css('width', value + '%').attr('aria-valuenow', value);
                            }

                            // Update progress based on order status
                            switch (orderStatus) {
                                case 'Order Recived':
                                    progress = 10;
                                    break;
                                case 'Dispatched':
                                    progress = 25;
                                    break;
                                case 'Shipped':
                                    progress = 50;
                                    break;
                                case 'Delerived':
                                    progress = 100;
                                    break;
                                default:
                                    progress = 0;
                                    break;
                            }

                            // Update progress bar
                            updateProgress(progress);
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
